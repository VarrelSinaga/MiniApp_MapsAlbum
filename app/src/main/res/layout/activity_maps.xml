<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <!-- Map fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Search bar (Places Autocomplete) -->
    <fragment
        android:id="@+id/autocomplete_fragment"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />

    <!-- Info text -->
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap map to add marker. Long press to add polygon point."
        android:padding="8dp"
        android:background="#CCFFFFFF"
        android:layout_margin="10dp"
        android:layout_gravity="top|start" />

    <!-- Floating button (misalnya untuk pilih foto marker custom) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPickImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Pick image"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_gravity="bottom|end" />

</FrameLayout>
